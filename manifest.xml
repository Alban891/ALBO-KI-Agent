      </bt:ShortStrings>
      
      <bt:LongStrings>
        <!-- Bestehende Tooltips -->
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Ã–ffnet den ALBO KI Finance Agent fÃ¼r intelligente Finanzanalysen"/>
        
