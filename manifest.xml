<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides" 
           xsi:type="MailApp">

  <!-- Eindeutige ID - DEINE AZURE APPLICATION ID -->
  <Id>f8437405-f9fc-4292-9c48-3aff00027c5b</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>ALBO Solutions</ProviderName>
  <DefaultLocale>de-DE</DefaultLocale>
  
  <!-- Add-In Informationen -->
  <DisplayName DefaultValue="ALBO KI-Finance-Agent"/>
  <Description DefaultValue="Intelligente Finance-Automatisierung fÃ¼r Outlook - KI-Agenten fÃ¼r Debitor, Kreditor, Controller und CFO"/>

  <!-- Funktionierende Icon URLs mit Placeholder Service -->
  <IconUrl DefaultValue="https://via.placeholder.com/32x32/667eea/ffffff?text=A"/>
  <HighResolutionIconUrl DefaultValue="https://via.placeholder.com/128x128/667eea/ffffff?text=A"/>

  <!-- Support URL -->
  <SupportUrl DefaultValue="https://github.com/Alban891/ALBO-KI-Agent"/>

  <!-- Erlaubte Domains -->
  <AppDomains>
    <AppDomain>https://alban891.github.io</AppDomain>
    <AppDomain>https://via.placeholder.com</AppDomain>
  </AppDomains>

  <!-- Outlook Integration -->
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  
  <!-- Mindestanforderungen -->
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.3" />
    </Sets>
  </Requirements>
  
  <!-- Form Settings fÃ¼r Ã¤ltere Outlook Versionen -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://alban891.github.io/ALBO-KI-Agent/taskpane.html"/>
        <RequestedHeight>500</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- Berechtigungen -->
  <Permissions>ReadWriteMailbox</Permissions>

  <!-- Version Overrides fÃ¼r moderne Outlook Versionen -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>
    
    <Hosts>
      <Host xsi:type="MailHost">
        
        <!-- Desktop Outlook -->
        <DesktopFormFactor>
          
          <!-- Commands Datei -->
          <FunctionFile resid="Commands.Url" />

          <!-- Button in E-Mail lesen -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="ALBOGroup">
                <Label resid="GroupLabel" />
                
                <Control xsi:type="Button" id="ALBOButton">
                  <Label resid="ButtonLabel" />
                  <Supertip>
                    <Title resid="ButtonLabel" />
                    <Description resid="ButtonTooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url" />
                  </Action>
                </Control>
                
              </Group>
            </OfficeTab>
          </ExtensionPoint>

          <!-- Button in E-Mail schreiben -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="ALBOComposeGroup">
                <Label resid="GroupLabel" />
                
                <Control xsi:type="Button" id="ALBOComposeButton">
                  <Label resid="ButtonLabel" />
                  <Supertip>
                    <Title resid="ButtonLabel" />
                    <Description resid="ButtonTooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url" />
                  </Action>
                </Control>
                
              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <!-- Ressourcen: URLs, Icons, Texte -->
    <Resources>
      
      <!-- Icons mit funktionierenden URLs -->
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://via.placeholder.com/16x16/667eea/ffffff?text=A"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://via.placeholder.com/32x32/667eea/ffffff?text=A"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://via.placeholder.com/80x80/667eea/ffffff?text=A"/>
      </bt:Images>
      
      <!-- URLs -->
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://alban891.github.io/ALBO-KI-Agent/commands.html" />
        <bt:Url id="Taskpane.Url" DefaultValue="https://alban891.github.io/ALBO-KI-Agent/taskpane.html" />
      </bt:Urls>
      
      <!-- Kurze Texte -->
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="ALBO"/>
        <bt:String id="ButtonLabel" DefaultValue="ðŸ¤– KI-Agent"/>
      </bt:ShortStrings>
      
      <!-- Lange Texte -->
      <bt:LongStrings>
        <bt:String id="ButtonTooltip" DefaultValue="ALBO KI-Finance-Agent starten - Intelligente E-Mail Automatisierung"/>
      </bt:LongStrings>
      
    </Resources>
  </VersionOverrides>
</OfficeApp>