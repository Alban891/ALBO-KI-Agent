<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" 
           xsi:type="MailApp">
  
  <!-- Deine offizielle Microsoft Azure ID -->
  <Id>f8437405-f9fc-4292-9c48-3aff00027c5b</Id>
  <Version>1.0.1.0</Version> <!-- VERSION ERHÃ–HT fÃ¼r Update -->
  <ProviderName>ALBO Solutions</ProviderName>
  <DefaultLocale>de-DE</DefaultLocale>
  
  <!-- Display Information -->
  <DisplayName DefaultValue="ALBO KI Finance Agent"/>
  <Description DefaultValue="Intelligenter KI-Assistent fÃ¼r Finanzanalysen und GeschÃ¤ftsprozesse in Outlook"/>
  
  <!-- Icons - GitHub Pages URLs -->
  <IconUrl DefaultValue="https://alban891.github.io/ALBO-KI-Agent/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://alban891.github.io/ALBO-KI-Agent/assets/icon-128.png"/>
  
  <!-- Support Information -->
  <SupportUrl DefaultValue="https://github.com/Alban891/ALBO-KI-Agent"/>
  
  <!-- App Domains -->
  <AppDomains>
    <AppDomain>https://alban891.github.io</AppDomain>
  </AppDomains>
  
  <!-- Hosts -->
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  
  <!-- Requirements -->
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  
  <!-- Form Settings -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://alban891.github.io/ALBO-KI-Agent/taskpane.html"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <!-- Permissions -->
  <Permissions>ReadWriteItem</Permissions>
  
  <!-- Rule -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="Read"/>
  </Rule>
  
  <!-- Version Overrides fÃ¼r Panel UND Button -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          
          <!-- âœ¨ NEU: FLOATING BUTTON in Message Read -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="ALBOGroup">
                <Label resid="ALBOGroupLabel"/>
                
                <!-- ðŸš€ ALBO FLOATING BUTTON - MIT EXISTIERENDEN ICONS -->
                <Control xsi:type="Button" id="ALBOFloatingButton">
                  <Label resid="ALBOButton.Label"/>
                  <Supertip>
                    <Title resid="ALBOButton.Title"/>
                    <Description resid="ALBOButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
                
                <!-- Bestehender Button bleibt als Fallback -->
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
          
          <!-- âœ¨ NEU: FLOATING BUTTON in Appointment Read -->
          <ExtensionPoint xsi:type="AppointmentOrganizerCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="ALBOGroupAppt">
                <Label resid="ALBOGroupLabel"/>
                
                <!-- ðŸš€ ALBO FLOATING BUTTON fÃ¼r Termine - MIT EXISTIERENDEN ICONS -->
                <Control xsi:type="Button" id="ALBOFloatingButtonAppt">
                  <Label resid="ALBOButton.Label"/>
                  <Supertip>
                    <Title resid="ALBOButton.Title"/>
                    <Description resid="ALBOButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
                
                <!-- Bestehender Button -->
                <Control xsi:type="Button" id="apptReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
          
        </DesktopFormFactor>
      </Host>
    </Hosts>
    
    <!-- Resources - KORRIGIERT -->
    <Resources>
      <bt:Images>
        <!-- Bestehende Icons - DIE FUNKTIONIEREN -->
        <bt:Image id="Icon.16x16" DefaultValue="https://alban891.github.io/ALBO-KI-Agent/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://alban891.github.io/ALBO-KI-Agent/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://alban891.github.io/ALBO-KI-Agent/assets/icon-80.png"/>
        
        <!-- ENTFERNT: Die nicht-existierenden albo-icon Referenzen -->
      </bt:Images>
      
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://alban891.github.io/ALBO-KI-Agent/taskpane.html"/>
      </bt:Urls>
      
      <bt:ShortStrings>
        <!-- Bestehende Labels -->
        <bt:String id="GroupLabel" DefaultValue="ALBO KI"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Finance Agent"/>
        
        <!-- âœ¨ NEU: ALBO Button Labels -->
        <bt:String id="ALBOGroupLabel" DefaultValue="ðŸš€ ALBO"/>
